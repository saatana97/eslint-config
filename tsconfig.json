{
    "include": ["src/**/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["ESNext", "DOM"],
        "types": ["@types/node"],
        "outDir": "types",
        "rootDirs": ["src", "docs"],
        "declaration": true,
        "declarationMap": false,
        "emitDeclarationOnly": true,
        "skipLibCheck": true
    },
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
